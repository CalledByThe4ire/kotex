include ../slide/slide

mixin slider(tree)
	+b(data-js='slider--parent')&attributes(attributes)
		each item in tree
			+slide(item)
				if item.content
					+b(data-js='slider--child').slider--child
						each element in item.content
							if element.group
								+slider(element.group)(data-js=null, class='slider__wrapper')

